<UserControl x:Class="WebCrawler.View.Crawling.WebsiteCrawlerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebCrawler.View.Crawling"
             mc:Ignorable="d" Height="161.483" Width="210">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Starting URL" Grid.Row="0"/>
        <TextBox Name="URLTextBox" Grid.Row="1" Margin="5" Text="{Binding StartingURL, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="Topics" Grid.Row="2" />
        <TextBox Margin="5" Grid.Row="3" Width="200" HorizontalAlignment="Left" Text="{Binding Topics, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Name="StartButton" Grid.Row="4" Width="80" HorizontalAlignment="Left" Margin="5, 10, 0, 0" Command="{Binding Path=StartButton, Mode=OneWay}">Start</Button>
    </Grid>
</UserControl>
